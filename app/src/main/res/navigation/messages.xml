<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messages"
    app:startDestination="@id/messagesFragment">

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.dev.multiplebackstackexample.ui.messages_stack.main.MessagesFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messages">
        <action
            android:id="@+id/action_messagesFragment_to_messageDetailsFragment"
            app:destination="@id/messageDetailsFragment"
            app:restoreState="true" />
    </fragment>
    <fragment
        android:id="@+id/messageDetailsFragment"
        android:name="com.dev.multiplebackstackexample.ui.messages_stack.details.MessageDetailsFragment"
        android:label="fragment_message_details"
        tools:layout="@layout/fragment_message_details">
        <argument
            android:name="messageId"
            app:argType="long" />
    </fragment>
</navigation>